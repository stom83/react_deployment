{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "space-in-parens": [
            "error", "always"
        ],
        "space-before-function-paren": [
            "error", {
                "anonymous": "always",
                "named": "always",
                "asyncArrow": "always"
            }
        ],
        "id-denylist": [
            "error", "data", "err", "e", "cb", "callback"
        ]
    }
}
